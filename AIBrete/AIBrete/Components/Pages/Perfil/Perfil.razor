@page "/personal-info"
@inherits Profile

<div class="info-container">
    <h2>Personal Info</h2>
    <EditForm Model="@user" OnValidSubmit="HandleValidSubmit">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <div class="upload-section">
                        <label class="custom-file" for="fileUpload">Upload Image</label>
                        <input type="file" id="fileUpload" OnChange="HandleImageUpload" />
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group mb-3">
                                <InputText @bind-Value="user.Email" placeholder="Email" class="form-control" />
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group mb-3">
                                <InputText @bind-Value="user.FirstName" placeholder="First Name" class="form-control" />
                            </div>
                            <div class="form-group mb-3">
                                <InputText @bind-Value="user.Location" placeholder="Location" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group mb-3">
                                <InputText @bind-Value="user.LastName" placeholder="Last Name" class="form-control" />
                            </div>
                            <div class="form-group mb-3">
                                <InputText @bind-Value="user.Phone" placeholder="Phone Number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group mb-3">
                                <InputTextArea @bind-Value="user.ExperienceSummary" placeholder="Experience Summary" class="form-control" rows="5" />
                            </div>
                            <div class="form-group mb-3">
                                <InputTextArea @bind-Value="user.Description" placeholder="Detailed Description" class="form-control" rows="5" />
                            </div>                         
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <InputText @bind-Value="fileName" placeholder="Name File Upload" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group mb-3">
                                <div class="upload-section">
                                <label class="custom-file" for="CvUpload" @onclick="HandleCVUpload">Upload CV</label>
                                <InputFile id="CvUpload" OnChange="OnCvSelected" style="display:none"/>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="upload-section">
                                    <button type="submit">Save Changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </EditForm>
</div>

